<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Évaluation {{ evaluation.id }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            color: #333;
            margin-bottom: 20px;
        }
        .evaluation-header {
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid #ccc;
        }
        .question {
            margin-bottom: 20px;
            padding: 10px;
            background-color: #f9f9f9;
        }
        .question-enonce {
            font-weight: bold;
            margin-bottom: 10px;
        }
        .proposition {
            margin-left: 20px;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="evaluation-header">
        <h1>Évaluation : {{ evaluation.titre }}</h1>
        <p>Date : {{ evaluation.dateHeure|date('d/m/Y H:i') }}</p>
        <p>Durée : {{ evaluation.duree|date('H:i') }}</p>
        <p>Thème : {{ evaluation.themeEval.contenu }}</p>
        <p>Difficulté : {{ evaluation.difficulteEval.libelle }}</p>
        <p> Introduction : {{ evaluation.introduction }}</p>
        <p> Nombre de questions : {{ questions|length }}</p>
        {% if evaluation.isCalculatrice == 1 %}
            <p>Calculatrice : Oui</p>
        {% else %}
            <p>Calculatrice : Non</p>
        {% endif %}
        {% if evaluation.isOrdinateur == 1 %}
            <p>Ordinateur : Oui</p>
        {% else %}
            <p>Ordinateur : Non</p>
        {% endif %}
        {% if evaluation.isDocument == 1 %}
            <p>Document : Oui</p>
        {% else %}
            <p>Document : Non</p>
        {% endif %}
        
    </div>

    <h2>Questions</h2>
    {% for question in questions %}
        <div class="question">
            <div class="question-enonce">{{ loop.index }}. {{ question.enonce }}</div>
            
            {% if question.propositionQuestion|length > 0 %}
                <div class="propositions">
                    {% for proposition in question.propositionQuestion %}
                        <div class="proposition">
                            {{ loop.index|upper }}) {{ proposition.libelle }}
                            {% if proposition.isTrue %}
                                <strong>(Réponse correcte)</strong>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endfor %}
</body>
</html>